<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/com.cool6.fridaybarapp"
        xmlns:app2="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:text="Next bar:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nextBarTitle" android:textStyle="bold"
            android:drawableEnd="left"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintHorizontal_bias="0.5" app2:layout_constraintEnd_toStartOf="@+id/textView"
            android:layout_marginStart="16dp" android:layout_marginEnd="8dp" app2:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app2:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app2:layout_constraintBaseline_toBaselineOf="@+id/nextBarTitle"
            app2:layout_constraintStart_toEndOf="@+id/nextBarTitle" app2:layout_constraintHorizontal_bias="0.5"
            app2:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"/>
</android.support.constraint.ConstraintLayout>
